
# AgentCraft Environment Configuration
# Copy this file to .env and add your actual API keys

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Anthropic API Configuration (Alternative)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Application Configuration
APP_NAME=AgentCraft
APP_VERSION=1.0.0
DEBUG=True

# Agent Configuration
DEFAULT_CONFIDENCE_THRESHOLD=0.3
MAX_RESPONSE_LENGTH=2000
ENABLE_PERFORMANCE_TRACKING=True

# Webhook Testing Configuration (Optional)
TEST_WEBHOOK_URL=https://webhook.site/your-test-endpoint
TEST_WEBHOOK_SECRET=your_test_secret_key

# Demo Configuration
STREAMLIT_PORT=5000
STREAMLIT_HOST=0.0.0.0
DEMO_MODE=True

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
